<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="vertical">
	<include 
		android:id="@+id/empty" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		layout="@layout/twitter_user">
	</include>
	
	<TextView 
		android:layout_height="wrap_content" 
		android:text="@+id/TextView01" 
		android:layout_marginTop="20px" 
		android:layout_width="fill_parent" 
		android:id="@+id/tm_text">
	</TextView>
	
	<Button 
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content" 
		android:id="@+id/tm_replay" 
		android:text="@string/tm_btn_replay" 
		android:layout_gravity="center" 
		android:layout_marginTop="15px">
	</Button>

	<Button 
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content" 
		android:id="@+id/tm_forward" 
		android:text="@string/tm_btn_forward" 
		android:layout_gravity="center">
	</Button>

	<Button 
		android:id="@+id/tm_favorite" 
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content" 
		android:text="@string/tm_btn_favorite" 
		android:layout_gravity="center">
	</Button>
	
	<Button 
		android:id="@+id/tm_delete" 
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content" 
		android:text="@string/tm_btn_delete" 
		android:layout_gravity="center">
	</Button>
	
</LinearLayout>
