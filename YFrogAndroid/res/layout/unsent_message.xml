<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="wrap_content" android:orientation="vertical" android:layout_width="fill_parent">
	<LinearLayout 
		android:id="@+id/um_to" 
		android:layout_height="wrap_content" android:layout_width="wrap_content">
		<TextView 
			android:layout_height="wrap_content" android:layout_marginRight="5px" android:layout_width="fill_parent" android:text="@string/umt_to">
		</TextView>
		<TextView 
			android:text="@+id/TextView02" 
			android:id="@+id/um_receiver" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
		</TextView>
	</LinearLayout>
	
	<TextView 
		android:text="@+id/TextView01" 
		android:id="@+id/um_text" 
		android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_marginTop="5px">
	</TextView>
</LinearLayout>
