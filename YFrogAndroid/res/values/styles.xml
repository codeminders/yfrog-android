<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="YFrog" parent="@android:style/Theme.Light">
    	<item name="android:textColor">@color/text</item>
    	<item name="android:windowTitleSize">36dp</item>
    	<item name="android:windowTitleStyle">@style/YFrog.Title_style</item>
    	<item name="android:buttonStyle">@style/YFrog.Button</item>
    	<item name="android:listViewStyle">@style/YFrog.ListView</item>
    	<item name="android:tabWidgetStyle">@style/YFrog.TabWidget</item>
    	<item name="android:editTextStyle">@style/YFrog.EditText</item>
    </style>
    
    <style name="YFrog.Title_style">
    	<item name="android:textColor">@color/title_text</item>
    </style>
       
    <style name="YFrog.Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_selector</item>
    </style>
    
    <style name="YFrog.ListView" parent="@android:style/Widget.ListView">
    	<item name="android:listSelector">@drawable/item_selector</item>
    	<item name="android:background">@android:color/white</item>
        <item name="android:divider">@android:drawable/divider_horizontal_bright</item>
    </style>
    
    <style name="YFrog.TabWidget" parent="@android:style/Widget.TabWidget">
        <item name="android:textAppearance">@style/YFrog.TabWidget.TextAppearance</item>
    </style>
    
    <style name="YFrog.TabWidget.TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#FF000000</item>
    </style>
    
    <style name="YFrog.EditText" parent="@android:style/Widget.EditText">
	    <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/edit_text_selector</item>
    </style>
    
    
 </resources>
