<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="YFrog" parent="@android:style/Theme.Light">
    	<item name="android:textColor">@color/text</item>
    	<item name="android:windowTitleSize">28dp</item>
    	<item name="android:windowTitleStyle">@style/YFrog.TitleStyle</item>
    	<item name="android:buttonStyle">@style/YFrog.Button</item>
    	<item name="android:listViewStyle">@style/YFrog.ListView</item>
    	<item name="android:tabWidgetStyle">@style/YFrog.TabWidget</item>
    	<item name="android:editTextStyle">@style/YFrog.EditText</item>
    	<item name="android:radioButtonStyle">@style/YFrog.RadioButton</item>
    	<item name="android:checkboxStyle">@style/YFrog.CheckBox</item>
    	<item name="android:panelBackground">@drawable/menu_selector</item>
    </style>
    
    <style name="YFrog.TitleStyle">
    	<item name="android:textColor">@color/title_text</item>
    	<item name="android:textSize">14dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
    </style>
       
    <style name="YFrog.Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_selector</item>
    </style>
    
    <style name="YFrog.ListView" parent="@android:style/Widget.ListView">
    	<item name="android:listSelector">@drawable/item_selector</item>
    	<item name="android:background">@android:color/white</item>
        <item name="android:divider">@android:drawable/divider_horizontal_bright</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="YFrog.TabWidget" parent="@android:style/Widget.TabWidget">
        <item name="android:textAppearance">@style/YFrog.TabWidget.TextAppearance</item>
    </style>
    
    <style name="YFrog.TabWidget.TextAppearance">
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#FF000000</item>
    </style>
    
    <style name="YFrog.EditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/edit_text_selector</item>
    </style>
    
    <style name="YFrog.RadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/btn_radio_selector</item>
    </style>
    
    <style name="YFrog.CheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_check_selector</item>
    </style>
    
    <style name="YFrog.IconMenu" parent="@android:style/Theme.IconMenu">
        <item name="android:itemBackground">@drawable/menu_selector</item>
    </style>
    
    <style name="YFrog.UsernameStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/username</item>
        <item name="android:textSize">14px</item>
    </style>
    
    <style name="YFrog.CounterStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">5px</item>
        <item name="android:layout_marginTop">5px</item>
    </style>
    
    <style name="YFrog.CaptionStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/caption</item>
    </style>
    
    
 </resources>
